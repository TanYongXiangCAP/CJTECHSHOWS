<!-- BuyTicket.razor -->
@page "/BuyTicket"
<PageTitle>Buy Tickets</PageTitle>

<style>
    h3 {
        font-family: 'YourUniqueFont', sans-serif;
        color: #333;
    }

    p {
        color: #555;
        font-size: 16px;
    }

    .ticket-details {
        margin-top: 20px;
    }

    .form-container {
        margin-top: 20px;
        background-color: #f4f4f4;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .payment-section {
        margin-top: 40px;
        background-color: #f4f4f4;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
    }

    input {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        box-sizing: border-box;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    button {
        font-family: 'YourUniqueFont', sans-serif;
        font-weight: bold;
        font-size: 18px;
        padding: 15px 30px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: #45a049;
        }
</style>

<h3>Buy Ticket</h3>

<p>Welcome to the Buy Ticket page! Here, you can purchase tickets for the CJ TECH SHOW.</p>

<!-- Ticket details -->
<div class="ticket-details">
    <h2 class="pass-info">Visitor Passes</h2>
    <p class="pass-info">
        Visitor passes cost $100 and include:
    </p>
    <ul class="pass-info">
        <li>Access to all booths and talks</li>
        <li>Access to dinner buffet</li>
        <li>FREE Tech Bag</li>
        <li>VIP Seating for exclusive workshops</li>
    </ul>
</div>

<!-- User input form -->
<div class="form-container">
    <h4>Enter Your Details</h4>
    <form>
        <label for="name">Full Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter your Full Name" required>

        <label for="email">Email Address:</label>
        <input type="email" id="email" name="email" placeholder="Enter your Email Address" required>

        <label for="number">Contact Number:</label>
        <input type="tel" id="number" name="number" placeholder="Enter your Contact Number" required>

        <label for="cardNumber">Card Number:</label>
        <input type="text" id="cardNumber" name="cardNumber" placeholder="Enter your card number" required>

        <div style="display: flex; justify-content: space-between;">
            <div style="width: 48%;">
                <label for="expirationDate">Expiration Date:</label>
                <input type="text" id="expirationDate" name="expirationDate" placeholder="MM/YY" required>
            </div>

            <div style="width: 48%;">
                <label for="cvv">CVV:</label>
                <input type="text" id="cvv" name="cvv" placeholder="Enter CVV" required>
            </div>
        </div>

        <button onclick="window.location.href = 'https://localhost:44305/PurchaseOverview';">Purchased Now!</button>
    </form>
</div>
